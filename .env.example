# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database PostgreSQL
DB_NAME=iot_sensor_db
DB_USER=iot_user
DB_PASSWORD=iot_password_123
DB_HOST=postgres
DB_PORT=5432

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# EMQX/MQTT Broker Configuration
EMQX_BROKER_HOST=emqx
EMQX_BROKER_PORT=1883
EMQX_BROKER_WS_PORT=8083
EMQX_BROKER_WSS_PORT=8084
EMQX_USERNAME=admin
EMQX_PASSWORD=public
EMQX_MQTT_TOPIC_PREFIX=iot/sensors
EMQX_KEEPALIVE=60
EMQX_QOS_DEFAULT=1
EMQX_USE_TLS=False

# MQTT Client Configuration
MQTT_CLIENT_ID_PREFIX=iot_platform
MQTT_AUTO_RECONNECT=True
MQTT_RECONNECT_DELAY=5

# Timezone
TIME_ZONE=America/Mexico_City
